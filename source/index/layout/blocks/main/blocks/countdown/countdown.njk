                <span class="top-back">
                    <span>0</span>
                </span>

                <span class="bottom">0</span>

                <span class="bottom-back">
                    <span>0</span>
                </span>
            </div>

            <div class="figure sec sec-2">
                <span class="top">0</span>

                <span class="top-back">
                    <span>0</span>
                </span>

                <span class="bottom">0</span>

                <span class="bottom-back">
                    <span>0</span>
                </span>
            </div>
        </div>
    </div>
</div>
